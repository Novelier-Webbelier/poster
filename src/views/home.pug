extends base
include ./components/my-posters-link
include ./components/suggestion-poster-card
include ./components/suggestion-topic-card

block content
  .side-bar
    .my-posters
      .my-posters__search
        .my-posters__title
          span Posters
          //- TODO : Pug link "/new"
          button
            i.fa.fa-book
            span New
        .my-posters__input
          input#searchInMyPoster(type="text", placeholder="Find a poster...")
      .my-posters__result
        for result in [{ title: "HI" }]
          +myPostersLink(result.title)
        else
          //- TODO : Pug link "/new"
          button
            i.fa.fa-book
            span Create new one!

  .home
    .sug-posters
      .sug-posters__title
        span Suggestion Posters
        for sugPos in [{ title: "Suggestion Poster 1", topic: { title: "suggestions1" }, owner: { username: "Novelier" } }, { title: "Suggestion Poster 2", topic: { title: "suggestions2" }, owner: { username: "Webbelier" } }]
          +suggestionPosterCard(sugPos)
        else
          //- TODO : Pug link "/random/poster"
          button
            i.fas.fa-dice
            span There is no suggestion posters. Watch Random Poster?
    .sug-topics
      .sug-topics__title
        span Suggestion Topics
        for sugTo in [ { title: "Suggestion Topic 1", description: "Description \of topic 1", posters: [ {}, {}, {} ], meta: { star: 4, } }, { title: "Suggestion Topic 2", description: "Descriptoin \of 2", posters: [ {}, {}, {}, {}, {} ], meta: { star: 2.4, }}, ]
          +suggestionTopicCard(sugTo)
        else
          //- TODO : Pug link "/random/topic"
          button
            i.fas.fa-dice
            span There is no suggestion topics. Watch Random Topic?
