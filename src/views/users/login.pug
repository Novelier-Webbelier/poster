extends ../base

block content
  .signin-box
    h1 Sign in to Poster
    if errorMessage
      span#errorMessage=errorMessage
    .login-box__input
      form(method="POST")
        label(for="usernameOrEmail")  Username or email address
        input(type="text", id="usernameOrEmail", name="usernameOrEmail")
        label(for="password")  Password
        input(type="password", id="password", name="password")
        input(type="submit", value="Sign in")
      .create-an-account
        span New to Poster?
          a(href="/join") Create an account.
